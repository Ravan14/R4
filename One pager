    <!-- Scripts -->
    <script>
        // 1. Label Wrapping Helper Function
        function splitLabel(label) {
            if (label.length <= 16) return label;
            const words = label.split(' ');
            const lines = [];
            let currentLine = words[0];

            for (let i = 1; i < words.length; i++) {
                if ((currentLine + " " + words[i]).length > 16) {
                    lines.push(currentLine);
                    currentLine = words[i];
                } else {
                    currentLine += " " + words[i];
                }
            }
            lines.push(currentLine);
            return lines;
        }

        // 2. Common Chart Options
        const commonOptions = {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    labels: {
                        color: '#94a3b8', // Slate 400
                        font: { family: 'Inter', size: 14 }
                    }
                },
                tooltip: {
                    backgroundColor: 'rgba(15, 23, 42, 0.9)',
                    titleColor: '#f8fafc',
                    bodyColor: '#cbd5e1',
                    borderColor: 'rgba(56, 189, 248, 0.3)',
                    borderWidth: 1,
                    padding: 12,
                    callbacks: {
                        title: function(tooltipItems) {
                            const item = tooltipItems[0];
                            let label = item.chart.data.labels[item.dataIndex];
                            if (Array.isArray(label)) {
                                return label.join(' ');
                            } else {
                                return label;
                            }
                        }
                    }
                }
            }
        };

        // 3. Competitive Moat Chart (Radar)
        const ctxMoat = document.getElementById('moatChart').getContext('2d');
        const rawMoatLabels = [
            "Response Speed",
            "All-Weather Access",
            "Spectral Detail",
            "Autonomous Tasking",
            "Fusion Depth"
        ];
        const moatLabels = rawMoatLabels.map(splitLabel);

        new Chart(ctxMoat, {
            type: 'radar',
            data: {
                labels: moatLabels,
                datasets: [
                    {
                        label: 'R4 Insight Set',
                        data: [5, 5, 5, 5, 5],
                        backgroundColor: 'rgba(56, 189, 248, 0.2)', // Sky 400
                        borderColor: '#38bdf8',
                        pointBackgroundColor: '#38bdf8',
                        borderWidth: 2
                    },
                    {
                        label: 'Legacy Optical',
                        data: [2, 1, 5, 1, 2],
                        backgroundColor: 'rgba(148, 163, 184, 0.1)', // Slate
                        borderColor: '#64748b',
                        pointBackgroundColor: '#64748b',
                        borderDash: [5, 5],
                        borderWidth: 1
                    },
                    {
                        label: 'Legacy SAR',
                        data: [3, 5, 1, 2, 2],
                        backgroundColor: 'rgba(148, 163, 184, 0.1)',
                        borderColor: '#94a3b8',
                        pointBackgroundColor: '#94a3b8',
                        borderDash: [2, 2],
                        borderWidth: 1
                    }
                ]
            },
            options: {
                ...commonOptions,
                scales: {
                    r: {
                        angleLines: { color: 'rgba(148, 163, 184, 0.2)' },
                        grid: { color: 'rgba(148, 163, 184, 0.2)' },
                        pointLabels: {
                            color: '#cbd5e1',
                            font: { size: 13 }
                        },
                        ticks: { display: false, max: 5 }
                    }
                }
            }
        });

        // 4. Use of Funds Chart (Doughnut)
        const ctxFunds = document.getElementById('fundsChart').getContext('2d');
        const rawFundLabels = [
            "Payload & Platform Prototyping",
            "R Insight AI & HIL Testbed",
            "Team & Operations",
            "Legal, Regulatory & IP"
        ];
        const fundLabels = rawFundLabels.map(splitLabel);

        new Chart(ctxFunds, {
            type: 'doughnut',
            data: {
                labels: fundLabels,
                datasets: [
                    {
                        data: [45, 30, 20, 5],
                        backgroundColor: [
                            '#38bdf8', // Sky 400
                            '#818cf8', // Indigo 400
                            '#4ade80', // Green 400
                            '#94a3b8'  // Slate 400
                        ],
                        borderColor: '#0f172a',
                        borderWidth: 2,
                        hoverOffset: 10
                    }
                ]
            },
            options: {
                ...commonOptions,
                cutout: '65%',
                plugins: {
                    ...commonOptions.plugins,
                    legend: {
                        position: 'bottom',
                        labels: {
                            color: '#cbd5e1',
                            usePointStyle: true,
                            padding: 20,
                            font: { size: 9 }
                        }
                    }
                }
            }
        });
    </script>
